{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>moonlight8978/renovate-config"
  ],
  "asdf": {
    "fileMatch": [
      "asdf/.tool-versions"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "python"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
